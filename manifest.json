{
  "manifest_version": 3,
  "name": "Countdown Timer",
  "version": "1.0",
  "description": "A simple countdown timer Chrome extension.",
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
